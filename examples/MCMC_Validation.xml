<beast namespace="beast.pkgmgmt
                 :beast.base.core
                 :beast.base.inference
                 :beast.base.util
                 :beast.base.math
                 :beast.evolution.nuc
                 :beast.base.evolution.operator
                 :beast.base.inference.operator
                 :beast.base.evolution.likelihood
                 :beast.base.evolution.speciation
                 :beast.base.core
                 :beast.base.inference.parameter
                 :beast.base.evolution.operator.kernel
                 :beastlabs.evolution.operators
                 :beast.base.evolution.tree
                 :beast.base.evolution.alignment
                 :feast.fileio" version="2.7">

    <run chainLength="50000000" id="mcmc" spec="MCMC" storeEvery="1000">
        <state id="state" storeEvery="1000">
            <stateNode id="tree" spec="feast.fileio.TreeFromNewickFile"
                       fileName="startTree.txt"
                       IsLabelledNewick="true"
                       adjustTipHeights="true">
            </stateNode>
        </state>

        <distribution id="birthDeath" spec="calibratedcpp.evolution.speciation.CalibratedCoalescentPointProcess">
            <treeModel spec="calibratedcpp.BirthDeathModel" origin="3.0">
                <birthRate value="2.0"/>
                <deathRate value="1.0"/>
                <rho value="1.0"/>
            </treeModel>
        </distribution>

        <operator id='treeScaler_root' spec='ScaleOperator' scaleFactor=".75" weight="2" tree="@tree" degreesOfFreedom="1" scaleAllIndependently="false" rootOnly='true'/>
        <operator id='treeScaler' spec='ScaleOperator' scaleFactor=".9" weight="20" tree="@tree"/>
        <operator id="uniform" spec='Uniform' weight="40" tree="@tree"/>
        <operator id="subtreeSlide" spec='SubtreeSlide' weight="20" gaussian="true" size="6" tree="@tree"/>
        <operator id='narrow2' spec='Exchange' isNarrow='true' weight="10" tree="@tree"/>
        <operator id='wide2' spec='Exchange' isNarrow='false' weight="10" tree="@tree"/>
        <operator id="wilsonBalding" spec='WilsonBalding' weight="10" tree="@tree"/>

        <logger fileName="./$(filebase).log" id="tracelog" logEvery="1000" mode="autodetect">
            <log idref="birthDeath"/>
            <log id="treeStats" spec="beast.base.evolution.tree.TreeStatLogger" tree="@tree"/>
        </logger>

        <logger id="screenlog" logEvery="10000" mode="autodetect">
            <log arg="@birthDeath" id="ESS.0" spec="util.ESS"/>
            <log idref="birthDeath"/>
            <log idref="treeStats"/>
        </logger>

        <logger fileName="./$(filebase).trees" id="treelog" logEvery="10000" mode="tree">
            <log idref="tree"/>
        </logger>
    </run>
</beast>